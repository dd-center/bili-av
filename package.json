{
  "name": "bili-av",
  "version": "1.0.0",
  "description": "AV/BV 互转小工具",
  "author": "Il Harper <afanyiyu@hotmail.com>",
  "private": true,
  "scripts": {
    "website:dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "website:build": "nuxt build",
    "website:start": "cross-env NODE_ENV=production node server/index.js",
    "website:generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix .",
    "commit": "git cz"
  },
  "main": "shell.js",
  "build": {
    "productName": "AV/BV 互转小工具",
    "appId": "com.bilisc.av",
    "directories": {
      "output": ".build",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "shell.js",
      "package.json",
      "**/node_modules/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "darkModeSupport": true,
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "linux": {
      "category": "Utility",
      "synopsis": "AV/BV 互转小工具"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://av.bilisc.com/releases/"
      }
    ]
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --fix",
    "*.{css,vue}": "stylelint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "axios": "^0.19.2",
    "cross-env": "^5.2.0",
    "element-ui": "^2.4.11",
    "koa": "^2.6.2",
    "koa-body": "^4.1.1",
    "koa-router": "^8.0.8",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/stylelint-module": "^3.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "git-cz": "^4.3.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "nodemon": "^1.18.9",
    "prettier": "^1.19.1",
    "stylelint": "^10.1.0"
  }
}
